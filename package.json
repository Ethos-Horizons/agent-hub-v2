{
  "name": "agent-hub-v2",
  "version": "0.1.0",
  "private": true,
  "description": "AgentHub - Centralized platform for managing AI-powered business automation agents",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n SHARED,API,WEB \"npm run dev -w @agent-hub/shared\" \"npm run dev -w @agent-hub/agent-hub\" \"npm run dev -w @agent-hub/portal\"",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "typecheck": "npm run typecheck --workspaces",
    "dev:check": "npm run typecheck && npm run lint",
    "doctor": "node scripts/doctor.js",
    "db:dump": "node --experimental-modules scripts/dump-db.mjs"
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parserOptions": {
          "project": false
        },
        "extends": [
          "eslint:recommended"
        ],
        "rules": {}
      }
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "postgres": "^3.4.7"
  }
}
